<?xml version="1.0" ?>
<include xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_include.xsd">
    <field id="apisettings_heading" translate="tooltip label comment" sortOrder="210" showInDefault="1" showInWebsite="1" showInStore="0">
        <label><![CDATA[DHL Express Account]]></label>
        <frontend_model>Dhl\ExpressRates\Block\Adminhtml\System\Config\Form\Field\Heading</frontend_model>
        <comment><![CDATA[Your account information will allow you to access the necessary API. New to DHL? <a href="">Request a business account</a>]]></comment>
        <attribute type="shared">1</attribute>
    </field>
    <field id="username" showInDefault="1" showInWebsite="1" showInStore="0" sortOrder="220" translate="tooltip label comment" type="text">
    <label><![CDATA[Username]]></label>
    </field>
    <field id="password" showInDefault="1" showInWebsite="1" showInStore="0" sortOrder="230" translate="tooltip label comment" type="obscure">
    <label><![CDATA[Password]]></label>
    <backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>
    </field>
    <field id="accountnumber" showInDefault="1" showInWebsite="1" showInStore="0" sortOrder="240" translate="tooltip label comment" type="text">
    <label><![CDATA[Account Number]]></label>
    <validate>validate-length maximum-length-9 minimum-length-9 validate-digits</validate>
    <comment><![CDATA[Please be aware you must first talk to your account rep to <a href="">add API access to your account</a>]]></comment>
    </field>
</include>
